{
    "manifest_version": 3,
    "name": "ContinuumAI - Context Portability",
    "version": "1.0",
    "description": "Transfer conversational context seamlessly between LLMs.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*",
                "*://gemini.google.com/*",
                "*://claude.ai/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}